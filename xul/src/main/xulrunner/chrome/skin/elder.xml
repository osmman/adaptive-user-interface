<?xml version="1.0"?>
<bindings xmlns:xbl="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    <xbl:binding id="field">
        <xbl:content>
            <xul:label xbl:inherits="control=for,value=label"/>
            <xbl:children includes ="textbox|button|checkbox|datepicker|description|listbox|menulist|radiogroup" />
            <xul:tooltip xbl:inherits="value=tooltip"/>
        </xbl:content>
    </xbl:binding>
    <xbl:binding id="menu">
        <xbl:content>
            <xul:menuitem class="elder"/>
        </xbl:content>
    </xbl:binding>
</bindings>